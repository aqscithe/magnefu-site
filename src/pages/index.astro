    <script>
        // Devlog filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const filterBtns = document.querySelectorAll('.filter-btn');
            const devlogPosts = document.querySelectorAll('.devlog-post');

            filterBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const filter = (btn as HTMLElement).dataset.filter;
                    
                    // Update active button
                    filterBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    
                    // Filter posts
                    devlogPosts.forEach(post => {
                        const htmlPost = post as HTMLElement;
                        if (filter === 'all' || htmlPost.dataset.category === filter) {
                            (htmlPost as HTMLElement).style.display = 'block';
                            (htmlPost as HTMLElement).style.animation = 'fadeIn 0.5s';
                        } else {
                            (htmlPost as HTMLElement).style.display = 'none';
                        }
                    });
                });
            });
        });

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

    <style>
        @keyframes fadeIn {
