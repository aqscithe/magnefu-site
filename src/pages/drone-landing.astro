        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.5s ease;
        cursor: pointer;
        overflow: hidden;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        transition: all 0.5s ease;
    }

    .trimesh-side {
        /* Use the Trimesh logo image as background in natural colors */
        background: url('/drone-site/TriMesh_Logo.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        color: #F5F5F5;
        position: relative;
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .skyline-side {
        /* Use the Austin Skyline logo image as background in natural colors */
        background: url('/drone-site/skyline_logo.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        color: #F5F5F5;
        position: relative;
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .side-content {
        text-align: center;
        z-index: 2;
        max-width: 400px;
        padding: 0 20px;
        transition: all 0.3s ease;
    }

    .company-logo {
        width: 280px;
        height: auto;
        margin-bottom: 0;
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.5));
        opacity: 0;
        transform: translateY(20px) scale(0.8);
    }



    .hover-indicator {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        font-weight: 700;
        font-size: 1.5rem;
        letter-spacing: 0.1em;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        text-transform: uppercase;
        margin-top: 40px;
        position: relative;
    }

    .hover-indicator span {
        position: relative;
        display: inline-block;
        padding-bottom: 8px;
    }

    .hover-indicator span::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 3px;
        transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border-radius: 2px;
    }

    /* Trimesh side underline - Technical Blue to Safety Orange */
    .trimesh-side .hover-indicator span::after {
        background: linear-gradient(90deg, #1F4E79 0%, #F76902 100%);
    }

    /* Austin Skyline side underline - Sky blue gradient */
    .skyline-side .hover-indicator span::after {
        background: linear-gradient(90deg, #87ceeb 0%, #4682b4 50%, #4169e1 100%);
    }

    /* Show underline on hover */
    .split-side:hover .hover-indicator span::after,
    .split-side:focus .hover-indicator span::after {
        width: 100%;
    }

    /* Hover Effects */
    .split-side:hover .hover-indicator {
        opacity: 1;
        transform: translateY(0);
    }

    /* Show small logos on hover */
    .split-side:hover .company-logo {
        opacity: 1;
        transform: translateY(0) scale(1.05);
        filter: drop-shadow(0 0 20px rgba(255,255,255,0.8));
    }

    /* Hide background logos on hover */
    .trimesh-side:hover {
        background: linear-gradient(rgba(18, 18, 18, 0.8), rgba(18, 18, 18, 0.8)),
                    linear-gradient(135deg, #1F4E79 0%, #121212 100%);
    }

    .skyline-side:hover {
        background: linear-gradient(135deg, 
                        rgba(135, 206, 235, 0.7) 0%,     /* Sky blue */
                        rgba(70, 130, 180, 0.8) 30%,     /* Steel blue */
                        rgba(100, 149, 237, 0.7) 60%,    /* Cornflower blue */
                        rgba(65, 105, 225, 0.8) 100%),   /* Royal blue */
                    linear-gradient(135deg, #87ceeb 0%, #4682b4 50%, #4169e1 100%);
    }

    .split-side.inactive {
        filter: brightness(0.4);
        transition: filter 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Focus states for accessibility */
    .split-side:focus {
        outline: 3px solid rgba(255, 255, 255, 0.8);
        outline-offset: -3px;
    }

    .split-side:focus .company-logo {
        opacity: 1;
        transform: translateY(0) scale(1.02);
        filter: drop-shadow(0 0 15px rgba(255,255,255,0.6));
    }

    .split-side:focus .hover-indicator {
        opacity: 1;
        transform: translateY(0);
    }

    /* Enhanced cursor feedback */
    .split-side {
        cursor: pointer;
    }

    .split-side:hover {
        cursor: pointer;
    }

    /* Divider Line */
    .divider-line {
        position: absolute;
        left: 50%;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(to bottom, 
            transparent 0%, 
            rgba(255,255,255,0.3) 20%, 
            rgba(255,255,255,0.6) 50%, 
            rgba(255,255,255,0.3) 80%, 
            transparent 100%);
        z-index: 10;
        transform: translateX(-50%);
        overflow: hidden;
    }

    .divider-line::before {
        content: '';
        position: absolute;
        top: -20%;
        left: 0;
        right: 0;
        height: 40%;
        background: linear-gradient(to bottom,
            transparent 0%,
            rgba(255,255,255,0.8) 50%,
            transparent 100%);
        box-shadow: 0 0 15px rgba(255,255,255,0.6);
        animation: travelingGlow 4s ease-in-out infinite;
    }

    @keyframes travelingGlow {
        0% { 
            top: -20%;
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        50% {
            top: 40%;
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% { 
            top: 100%;
            opacity: 0;
        }
    }

    /* Mobile interaction hints */
    @media (max-width: 768px) {
        /* Add a subtle overlay hint for mobile users */
        .split-side::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, 
                rgba(0,0,0,0.1) 0%, 
                rgba(0,0,0,0.05) 50%, 
                rgba(0,0,0,0.1) 100%);
            z-index: 1;
            pointer-events: none;
            animation: mobileHint 3s ease-in-out infinite;
        }

        @keyframes mobileHint {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.1; }
        }

        /* Hide company logos and hover indicator on mobile */
        .company-logo {
            display: none;
        }

        .hover-indicator {
            display: none;
        }

        /* Add mobile-specific instruction text */
        .split-side::after {
            content: 'TAP TO ENTER';
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            font-family: 'Inter', sans-serif;
            font-size: 0.9rem;
            font-weight: 600;
            color: rgba(255,255,255,0.6);
            letter-spacing: 0.1em;
            z-index: 3;
            animation: tapHint 2s ease-in-out infinite;
        }

        @keyframes tapHint {
            0%, 100% { opacity: 0.6; }
            50% { opacity: 1; }
        }

        /* Enhanced touch feedback */
        .split-side:active {
            transform: scale(0.98);
            transition: transform 0.1s ease;
        }

        .split-side:active::after {
            opacity: 1;
            transform: translateX(-50%) scale(1.05);
        }

        /* Touch feedback specifically for mobile */
        .split-side.touching {
            transform: scale(0.96);
            transition: transform 0.15s ease;
        }

        .split-side.touching::after {
            opacity: 1;
            transform: translateX(-50%) scale(1.1);
        }

        /* Disable hover effects in mobile mode to prevent conflicts */
        .split-side.mobile-mode:hover {
            background: inherit;
        }

        /* Prevent iOS zoom on double tap */
        .split-side {
            touch-action: manipulation;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            user-select: none;
        }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .split-container {
            flex-direction: column;
            position: relative;
        }

        .split-side {
            flex: 1;
            min-height: 50vh;
            position: relative;
        }

        .divider-line {
            left: 0;
            right: 0;
            top: auto;
            bottom: auto;
            width: auto;
            height: 2px;
            background: linear-gradient(to right, 
                transparent 0%, 
                rgba(255,255,255,0.3) 20%, 
                rgba(255,255,255,0.6) 50%, 
                rgba(255,255,255,0.3) 80%, 
                transparent 100%);
            /* Use flexbox positioning instead of viewport-based positioning */
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            /* Ensure it's calculated from the actual container height */
            box-sizing: border-box;
        }

