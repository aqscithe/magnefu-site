<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Professional drone services for industry and entertainment. Choose between Trimesh Drone Solutions LLC for industrial applications or Austin Skyline Media for creative aerial content.">
    <meta name="keywords" content="drone services, aerial photography, UAV solutions, Austin Texas, professional drones">
    <meta property="og:title" content="Drone Solutions - Professional UAV Services">
    <meta property="og:description" content="Professional drone services for industry and entertainment in Austin, Texas.">
    <meta property="og:type" content="website">
    <title>Drone Solutions - Trimesh & Austin Skyline Media</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Oswald:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="split-container">
        <!-- Trimesh Side -->
        <div class="split-side trimesh-side" id="trimesh-side" role="button" tabindex="0" aria-label="Enter Trimesh Drone Solutions - Professional UAV Services and Industrial Applications">
            <div class="background-overlay trimesh-bg"></div>
            <div class="side-content">
                <img src="/drone-site/TriMesh_Logo_alpha.png" alt="Trimesh Drone Solutions LLC Logo" class="company-logo">
                <div class="hover-indicator">
                    <span>Click to Enter</span>
                </div>
            </div>
        </div>

        <!-- Austin Skyline Media Side -->
        <div class="split-side skyline-side" id="skyline-side" role="button" tabindex="0" aria-label="Enter Austin Skyline Media - Creative Aerial Content and Entertainment Services">
            <div class="background-overlay skyline-bg"></div>
            <div class="side-content">
                <img src="/drone-site/skyline_logo_alpha.png" alt="Austin Skyline Media Logo" class="company-logo">
                <div class="hover-indicator">
                    <span>Click to Enter</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Divider Line -->
    <div class="divider-line"></div>

    <script>
        // Preload images for better performance
        function preloadImages() {
            const images = [
                '/drone-site/TriMesh_Logo.png',
                '/drone-site/skyline_logo.png',
                '/drone-site/TriMesh_Logo_alpha.png',
                '/drone-site/skyline_logo_alpha.png'
            ];
            
            images.forEach(src => {
                const img = new Image();
                img.src = src;
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            preloadImages();
            
            const trimeshSide = document.getElementById('trimesh-side');
            const skylineSide = document.getElementById('skyline-side');

            if (!trimeshSide || !skylineSide) return;

            // Click handlers
            trimeshSide.addEventListener('click', function() {
                window.location.href = '/trimesh-demo';
            });

            skylineSide.addEventListener('click', function() {
                // For now, just alert - later we'll create the Austin Skyline page
                alert('Austin Skyline Media page coming soon!');
                // window.location.href = '/austin-skyline';
            });

            // Add keyboard navigation support
            function handleKeyPress(event, targetUrl) {
                if (event.key === 'Enter' || event.key === ' ') {
                    event.preventDefault();
                    if (targetUrl) {
                        window.location.href = targetUrl;
                    } else {
                        alert('Austin Skyline Media page coming soon!');
                    }
                }
            }

            trimeshSide.addEventListener('keydown', (e) => handleKeyPress(e, '/trimesh-demo'));
            skylineSide.addEventListener('keydown', (e) => handleKeyPress(e, null));

            // Mobile-specific touch enhancements
            function isMobile() {
                return window.innerWidth <= 768;
            }

            function addTouchFeedback(element) {
                element.addEventListener('touchstart', function(e) {
                    e.preventDefault(); // Prevent default to avoid double-tap zoom
                    this.classList.add('touching');
                }, { passive: false });

                element.addEventListener('touchend', function(e) {
                    e.preventDefault();
                    this.classList.remove('touching');
                    
                    // Add a small delay to ensure visual feedback is seen
                    setTimeout(() => {
                        this.click();
                    }, 100);
                }, { passive: false });

                element.addEventListener('touchcancel', function() {
                    this.classList.remove('touching');
                });
            }

            // Add touch feedback for mobile devices
            if (isMobile()) {
                addTouchFeedback(trimeshSide);
                addTouchFeedback(skylineSide);
                
                // Remove hover effects on mobile since they don't work properly
                trimeshSide.classList.add('mobile-mode');
                skylineSide.classList.add('mobile-mode');
            }

            // Handle orientation changes
            window.addEventListener('orientationchange', function() {
                setTimeout(() => {
                    if (isMobile()) {
                        trimeshSide.classList.add('mobile-mode');
                        skylineSide.classList.add('mobile-mode');
                    } else {
                        trimeshSide.classList.remove('mobile-mode');
                        skylineSide.classList.remove('mobile-mode');
                    }
                }, 100);
            });

            // Enhanced hover effects
            trimeshSide.addEventListener('mouseenter', function() {
                trimeshSide.classList.add('active');
                skylineSide.classList.add('inactive');
            });

            trimeshSide.addEventListener('mouseleave', function() {
                trimeshSide.classList.remove('active');
                skylineSide.classList.remove('inactive');
            });

            skylineSide.addEventListener('mouseenter', function() {
                skylineSide.classList.add('active');
                trimeshSide.classList.add('inactive');
            });

            skylineSide.addEventListener('mouseleave', function() {
                skylineSide.classList.remove('active');
                trimeshSide.classList.remove('inactive');
            });
        });
    </script>
</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        height: 100vh;
        overflow: hidden;
