        .split-container::after {
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            top: 50%;
            height: 2px;
            background: linear-gradient(to right, 
                transparent 0%, 
                rgba(255,255,255,0.3) 20%, 
                rgba(255,255,255,0.6) 50%, 
                rgba(255,255,255,0.3) 80%, 
                transparent 100%);
            transform: translateY(-50%);
            z-index: 10;
            pointer-events: none;
        }

        /* Hide the original divider on mobile */
        .divider-line {
            display: none;
        }

        .company-logo {
            width: 220px;
        }

        .split-side.inactive {
            filter: brightness(0.4);
        }
    }

