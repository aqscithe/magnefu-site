        .side-content {
            padding: 0 15px;
        }

        .company-logo {
            width: 180px;
            margin-bottom: 20px;
        }
    }

    /* Animation for page load */
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .split-side {
        animation: slideIn 0.8s ease-out;
    }

    .trimesh-side {
        animation-delay: 0.1s;
    }

    .skyline-side {
        animation-delay: 0.2s;
    }
