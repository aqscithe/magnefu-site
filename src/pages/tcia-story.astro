    <script>
        // Gallery and story interconnection
        document.addEventListener('DOMContentLoaded', function() {
            const galleryItems = document.querySelectorAll('.gallery-item');
            const storyRefs = document.querySelectorAll('.story-image-ref');

            // Highlight corresponding story section when gallery item is hovered
            galleryItems.forEach(item => {
                item.addEventListener('mouseenter', () => {
                    const storyId = (item as HTMLElement).dataset.story;
                    const storySection = document.getElementById(`story-${storyId}`);
                    if (storySection) {
                        storySection.classList.add('highlighted');
                    }
                });

                item.addEventListener('mouseleave', () => {
                    const storyId = (item as HTMLElement).dataset.story;
                    const storySection = document.getElementById(`story-${storyId}`);
                    if (storySection) {
                        storySection.classList.remove('highlighted');
                    }
                });

                // Click to scroll to story section
                item.addEventListener('click', () => {
                    const storyId = (item as HTMLElement).dataset.story;
                    const storySection = document.getElementById(`story-${storyId}`);
                    if (storySection) {
                        storySection.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                });
            });

            // Highlight corresponding gallery item when story ref is hovered
            storyRefs.forEach(ref => {
                ref.addEventListener('mouseenter', () => {
                    const galleryId = (ref as HTMLElement).dataset.gallery;
                    const galleryItem = document.querySelector(`[data-story="${galleryId}"]`);
                    if (galleryItem) {
                        galleryItem.classList.add('highlighted');
                    }
                });

                ref.addEventListener('mouseleave', () => {
                    const galleryId = (ref as HTMLElement).dataset.gallery;
                    const galleryItem = document.querySelector(`[data-story="${galleryId}"]`);
                    if (galleryItem) {
                        galleryItem.classList.remove('highlighted');
                    }
                });
            });
        });
    </script>
