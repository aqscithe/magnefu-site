---
import '../styles/theme.css';
import '../styles/timeline.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Daily Schedule - Organize your daily activities">
    <title>Daily Schedule | magnefu</title>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
        }
        
        .container {
            max-width: 1400px; /* Wider container */
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            padding-bottom: 1.2rem;
            border-bottom: 2px solid var(--primary);
        }
        
        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            color: var(--primary);
            font-weight: 500;
            transition: color 0.3s;
        }
        
        .back-button:hover {
            color: var(--accent);
        }
        
        .schedule-container {
            background-color: var(--card-bg);
            border-radius: 12px;
            padding: 2.5rem 2.5rem 3.5rem; /* Increased bottom padding */
            box-shadow: 0 2px 15px var(--card-shadow);
            margin-bottom: 2rem; /* Add margin at the bottom */
            overflow: visible; /* Ensure content isn't cut off */
        }
        
        .intro-text {
            text-align: center;
            margin-bottom: 10rem;
        }
        
        .intro-text h2 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: var(--primary);
        }
        
        .intro-text p {
            font-size: 1.1rem;
            max-width: 700px;
            margin: 0 auto;
            opacity: 0.9;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
            
            .schedule-container {
                padding: 1.5rem;
            }
            
            header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <a href="/" class="back-button">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                Back to Home
            </a>
            <h1>Daily Schedule</h1>
        </header>
        
        <div class="schedule-container">
            <div class="intro-text">
                <h2>My Daily Journey</h2>
                <p>Follow the magnefu ninja as he moves through his daily schedule.</p>
            </div>
            
            <div class="timeline-container">
                <div class="timeline-hours">
                    <div class="timeline-hour">6:00 AM</div>
                    <div class="timeline-hour">8:00 AM</div>
                    <div class="timeline-hour">10:00 AM</div>
                    <div class="timeline-hour">12:00 PM</div>
                    <div class="timeline-hour">2:00 PM</div>
                    <div class="timeline-hour">4:00 PM</div>
                    <div class="timeline-hour">6:00 PM</div>
                    <div class="timeline-hour">8:00 PM</div>
                    <div class="timeline-hour">10:00 PM</div>
                </div>
                
                <div class="timeline-track">
                    <!-- Logo marker will be added by JavaScript -->
                </div>
                
                <div class="timeline-tasks">
                    <!-- Tasks will be added by JavaScript -->
                </div>
            </div>
            
            <div class="task-details">
                <!-- Task details will be populated by JavaScript -->
            </div>
            
            <div class="timeline-controls">
                <!-- Controls will be added by JavaScript -->
            </div>
        </div>
    </div>
    
    <script>
        import { initTimeline } from '../scripts/timeline';
        
        document.addEventListener('DOMContentLoaded', function() {            
            
            // Initialize the timeline
            initTimeline();
        });
    </script>
</body>
</html> 